{
  "manifest_version": 3,
  "name": "Quick ChatGPT",
  "version": "1.0",
  "description": "Quick access to ChatGPT via context menu",
  "permissions": [
    "contextMenus",
    "system.display"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}